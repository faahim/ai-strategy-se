---
import aiTools from '../../public/ai-tools.json';
---

<div class="suggestions-container relative">
  <!-- Existing suggestions content -->
  <div id="suggestionsContent">
    <!-- Your existing suggestions content here -->
  </div>
</div>

<script>
  const searchInput = document.querySelector('[data-search-input]');
  const suggestionsContent = document.getElementById('suggestionsContent');

  function updateSearchResults() {
    const hasResults = suggestionsContent.children.length > 0;
    
    if (!hasResults) {
      suggestionsContent.classList.add('hidden');
    } else {
      suggestionsContent.classList.remove('hidden');
    }
  }

  // Listen for input changes
  searchInput?.addEventListener('input', updateSearchResults);
</script>

<style>
  .suggestions-container {
    min-height: 200px;
  }
</style>

