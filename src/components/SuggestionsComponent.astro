---
import aiTools from '../../public/ai-tools.json';
---

<div>
  
  <div class="flex h-screen mt-10 max-w-full mx-auto">
   <aside class="w-1/4 border-r-2 flex">
    <div class="w-1/6 text-white bg-[#130935] p-4 flex flex-col justify-between">
      <!-- Top Icons -->
      <div class="space-y-8 text-2xl">
        <div class="hover:bg-purple-700 p-2 rounded-lg cursor-pointer flex justify-center items-center">
          <span class="material-icons">home</span>
        </div>
        <div class="hover:bg-purple-700 p-2 rounded-lg cursor-pointer flex justify-center items-center">
          <span class="material-icons">star</span>
        </div>
        <div class="hover:bg-purple-700 p-2 rounded-lg cursor-pointer flex justify-center items-center">
          <span class="material-icons">bar_chart</span>
        </div>
      </div>

      <!-- Bottom Icons -->
      <div class="space-y-8 text-2xl">
        <div class="hover:bg-purple-700 p-2 rounded-lg cursor-pointer flex justify-center items-center">
          <span class="material-icons">notifications</span>
        </div>
        <div class="hover:bg-purple-700 p-2 rounded-lg cursor-pointer flex justify-center items-center">
          <span class="material-icons">help</span>
        </div>
        <div class="hover:bg-purple-700 p-2 rounded-lg cursor-pointer flex justify-center items-center">
          <span class="material-icons">group</span>
        </div>
        <div class="hover:bg-purple-700 p-2 rounded-lg cursor-pointer flex justify-center items-center">
          <span class="material-icons">settings</span>
        </div>
      </div>
    </div>     
    <div class="w-5/6 bg-red-200">
      <h2>Aside section</h2>
    </div>
   </aside>
  
    <main class="w-3/4  px-5 md:px-10">
      <div class="text-left font-medium text-2xl mb-5">
        <h1>Suggestions!</h1>
        <p>Welcome to AI tools' suggestions page</p>
      </div>
    
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-5">
        {
          aiTools.map((tool) => (
            <div class="p-4 border-2 border-blue-200 rounded-lg hover:border-blue-500 cursor-pointer">
              <div>
                {/* Placeholder for future image assets */}
                {tool.icon && <img src={tool.icon} alt={`${tool.name} icon`} />}
              </div>
              <h2 class="text-lg font-semibold">{tool.name}</h2>
              <p class="text-sm text-gray-600 py-2">{tool.description}</p>
              <div class="flex flex-wrap gap-2 pb-2">
                {tool.tags?.map((tag) => (
                  <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">{tag} </span>
                ))}
              </div>
              <button class="bg-blue-500 text-white px-4 py-2 rounded-md">
              <a href={tool.url} target="_blank" rel="noopener noreferrer">
                Visit Tool
              </a>
              </button>
            </div>
          ))
        }
      </div>
    </main>
  </div>
</div>

